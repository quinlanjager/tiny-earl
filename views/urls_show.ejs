<% include partials/_head %>
<table>
  <tr>
    <th>Original URL</th>
    <th>Shortened URL</th>
    <th>Stats</th>
    <th>Edit Destination</th>
  </tr>
  <tr>
    <td class="longUrl"><%= urls[urlId].longUrl %></td>
    <td><a href="/u/<%= urls[urlId].id %>"><%= urls[urlId].id %></a></td>
    <td>Date Created: <%= urls[urlId].dateCreated %></br>
        Number of Visits: <%= urls[urlId].stats.totalVisitors %></br>
        Unique Visits: <%= urls[urlId].stats.totalUnique.length %></br>
        <%if(urls[urlId].stats.totalVisitors > 0){%>
          <a href="/urls/<%= urls[urlId].id%>/stats">Graph of last 7 days.</a>
        <%}%>
    </td>
    <td>
      <input form="changeForm" name="newURL" type="text" placeholder="New destination">
      <button form="changeForm">Change URL</button>
      <!-- is hidden via css -->
      <form id="changeForm" method="post" action="/urls/<%= urls[urlId].id %>"> </form>
    </td>
  </tr>
</table>
<% include partials/_button %> <p><a href="/urls/">See all your URLs</a></p>
<% include partials/_footer %>